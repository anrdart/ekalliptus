# Midtrans Configuration
# Get these values from Midtrans Dashboard: https://dashboard.midtrans.com/

# Client Key (used in frontend)
VITE_MIDTRANS_CLIENT_KEY=your-client-key-here

# Server Key (used in backend - keep this secret!)
VITE_MIDTRANS_SERVER_KEY=your-server-key-here

# Environment Mode
# Set to 'true' for production, 'false' for sandbox
VITE_MIDTRANS_IS_PRODUCTION=false

# API Configuration
# Base URL for your backend API (if using actual backend)
VITE_API_BASE_URL=http://localhost:3000/api

# Application Configuration
VITE_APP_NAME=Ekalliptus
VITE_APP_URL=https://ekalliptus.id

# Notification URLs (should match your actual backend endpoints)
# These URLs will be used by Midtrans to send payment notifications
VITE_MIDTRANS_NOTIFICATION_URL=https://ekalliptus.id/notification/handling
VITE_MIDTRANS_RECURRING_NOTIFICATION_URL=https://ekalliptus.id/notification/handling
VITE_MIDTRANS_PAY_ACCOUNT_NOTIFICATION_URL=https://ekalliptus.id/notification/handling

# Redirect URLs (after payment)
VITE_MIDTRANS_FINISH_REDIRECT_URL=https://ekalliptus.id/payment/finish
VITE_MIDTRANS_UNFINISH_REDIRECT_URL=https://ekalliptus.id/payment/unfinish
VITE_MIDTRANS_ERROR_REDIRECT_URL=https://ekalliptus.id/error

# Feature Flags
VITE_ENABLE_PAYMENT_HISTORY=true
VITE_ENABLE_PAYMENT_METHOD_SELECTION=true
VITE_ENABLE_REAL_TIME_STATUS_MONITORING=true

# Logging Configuration
VITE_ENABLE_PAYMENT_LOGGING=true
VITE_ENABLE_DEBUG_MODE=false

# Debug Configuration
VITE_ENABLE_PAYMENT_DEBUG_PANEL=true
VITE_ENABLE_REAL_TIME_LOGGING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security Configuration
VITE_ENABLE_PAYMENT_VALIDATION=true
VITE_MAX_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY_MS=5000

# UI Configuration
VITE_DEFAULT_CURRENCY=IDR
VITE_DEFAULT_LOCALE=id-ID
